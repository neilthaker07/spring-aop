package services;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class Main {

	public static void main(String[] args) {
		ApplicationContext ctx  = new ClassPathXmlApplicationContext("beans.xml");
		BlogServiceImpl a = (BlogServiceImpl)ctx.getBean("blogService");
		
		a.readBlog(userId, blogUserId);
		a.shareBlog(userId, blogUserId, targetUserId);
		a.commentOnBlog(userId, blogUserId, message);
		a.unshareBlog(userId, targetUserId);

		ctx.close();
	}

}
